<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_denglu" >

        <ImageView
            android:id="@+id/yisheng_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dip"
            android:layout_marginTop="26dip"
            android:background="@drawable/yisheng" />

        <TextView
            android:id="@+id/yisheng_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dip"
            android:layout_marginTop="38dip"
            android:layout_toRightOf="@+id/yisheng_img"
            android:text="123"
            android:textColor="@color/black"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/yisheng_zhicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yisheng_name"
            android:layout_marginLeft="14.5dip"
            android:layout_marginTop="12dip"
            android:layout_toRightOf="@+id/yisheng_img"
            android:text="123"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/keshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dip"
            android:layout_marginTop="12dip"
            android:text="心内"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:background="@drawable/img_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="12dip"
        android:text="排班："
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="5.2dip"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="0.1dip"
                android:background="@drawable/img_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#000000" >
            </TextView>

            <ImageView
                android:layout_width="40dip"
                android:layout_height="0.1dip"
                android:background="@drawable/img_line" />

            <TextView
                android:layout_width="40dip"
                android:layout_height="35dip"
                android:gravity="center"
                android:text="上午"
                android:textColor="#000000" >
            </TextView>

            <ImageView
                android:layout_width="40dip"
                android:layout_height="0.1dip"
                android:background="@drawable/img_line" />

            <TextView
                android:layout_width="40dip"
                android:layout_height="35dip"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="下午"
                android:textColor="#000000" >
            </TextView>

            <ImageView
                android:layout_width="40dip"
                android:layout_height="0.1dip"
                android:background="@drawable/img_line" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.1dip"
            android:layout_marginTop="5.2dip"
            android:layout_height="106dip"
            android:background="@drawable/img_line" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <GridView
                    android:id="@+id/grid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:horizontalSpacing="0.1dip"
                    android:numColumns="auto_fit"
                    android:scrollbars="none"
                    android:stretchMode="spacingWidthUniform"
                    android:verticalSpacing="0.1dip" >
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="12dip"
        android:text="医生简介："
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/yishengjianjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="5dip"
        android:textColor="@color/black"
        android:textSize="13dip" />

</LinearLayout>
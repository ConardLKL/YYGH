<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybg"
    >

  <RelativeLayout 
      android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@drawable/bg_yuyue"
    android:orientation="vertical" >
    <Button android:id="@+id/title_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/back_btn_selector"
        android:layout_marginLeft="10dip"/>
 <TextView android:id="@+id/title_id"
     android:layout_gravity="center_vertical|center_horizontal"
     android:textColor="@color/white"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:text="银行卡绑定"
     android:textSize="20dip"
     />
 
  <Button android:id="@+id/title_btn_right"
        android:layout_width="45dip"
        android:layout_height="12dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/quxiaobangding"
        android:layout_marginRight="10dip"/>
</RelativeLayout>
 <ImageView android:id="@+id/bind_img"
     android:layout_below="@+id/title"
     android:layout_width="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="19dip"
     android:layout_height="wrap_content"
     android:background="@drawable/banklogo"/>
  
  
<LinearLayout 
    android:id="@+id/bindcard_lay"
    android:layout_below="@+id/bind_img"
    android:layout_width="match_parent"
    android:layout_marginLeft="19dip"
    android:layout_marginRight="19dip"
    android:layout_marginTop="19dip"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓       名:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <TextView 
             android:id="@+id/user_name"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15dip"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件类型:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <TextView 
             android:id="@+id/zhengjianleixing"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15dip"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证  件  号:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <TextView 
             android:id="@+id/cusno"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15dip"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中行卡号:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <TextView 
             android:id="@+id/cardno"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15dip"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手  机  号:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <EditText
             android:id="@+id/phoneno"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15dip"
            android:layout_marginLeft="5dip"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="19dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期:"
            android:textSize="15dip"
            android:textColor="@color/black"/>
         <TextView 
             android:id="@+id/birthday"
             android:textSize="15dip"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
    
<Button android:id="@+id/bindcardbtn"
    android:layout_below="@+id/bindcard_lay"
    android:layout_width="match_parent"
    android:layout_height="38.5dip"
    android:layout_marginTop="18dip"
    android:layout_marginLeft="19dip"
    android:layout_marginRight="19dip"
    android:textColor="@color/white"
    android:textSize="15dip"
    android:background="@drawable/bt_bangding"
    android:text="确认绑定"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="13dip"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/yisheng_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="0.5dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/yisheng" />

    <ImageView
        android:id="@+id/right_jt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/channel_left_disable" />

    <TextView
        android:id="@+id/yisheng_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="11dip"
        android:layout_toRightOf="@+id/yisheng_img"
        android:text="医师"
        android:textColor="@color/black" />
    
     <TextView
        android:id="@+id/yisheng_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="11dip"
        android:layout_toRightOf="@+id/yisheng_name"
        android:text="主任"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/yisheng_keshi"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dip"
        android:layout_below="@+id/yisheng_name"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@+id/right_jt"
        android:layout_toRightOf="@+id/yisheng_img"
        android:text="科室"
        android:textColor="@color/black" />
  <TextView
        android:id="@+id/yisheng_feiyong"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:visibility="gone"/>
</RelativeLayout>
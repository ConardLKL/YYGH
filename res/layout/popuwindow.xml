<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="30dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    >

    <Button
        android:id="@+id/popu_x"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3.5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/close" />

    <TextView
        android:id="@+id/tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="27.5dip"
        android:text="出诊信息仅供参考，可能会出现医生停诊的状况"
        android:textColor="@color/orange1"
        android:textSize="13dip" />

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tishi"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="出诊时间："
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="周三上午"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feiyong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="挂  号  费："
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/text_feiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="14"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leixing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feiyong"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="挂号类型："
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/text_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:text="专家"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </LinearLayout>

    <Button
        android:id="@+id/popu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leixing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/woyaouyuyue"
        android:padding="5dip"
        android:text="我要预约"
        android:textColor="@color/white" />

</RelativeLayout>